<p id="notice"><%= notice %></p>

<h1>Meus Eventos</h1>

<% if @events.count == 0 %>
    <h3> Você ainda não se interessou por nenhum evento.</h3>
    <h3> Clique <a href="/events">aqui</a> para ver os eventos disponívelis</h3>
<% else %>


<div class="card-group" style="display: flex;">
  <% @events.each do |event| %>
  <div class="card">
  <div class="card-body">
      <h4 class="card-title"><%= event.title %> </h4>
      <p class= "card-text"> <%= event.start_time %> <%= event.end_time %> </p>
      <p class="card-text"><%= event.description %></p>
      <p class="card-text"><%= event.address %></p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
       <%= link_to 'Ver mais detalhes', event %>
        <%= link_to 'Não quero mais!', {:controller => "events", :action => "unsubscribe", :format => "json", :user_id => current_user.id, :event_id => event.id}, :method => :post, data: { confirm: "Tem certeza que não quer mais este evento? "}, class:"btn btn-primary"  %>
    </div>
  </div>
 </div>
 
        
      <% end %>
   
<% end %>

<br>

<p id="notice"><%= notice %></p>
  <%= image_tag @event.image %>
<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p><strong>Categoria:</strong>
 <%=  @event.category.name %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @event.end_time %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @event.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @event.longitude %>
</p>

<p>
  <strong>Endereço:</strong>
  <%= @event.address %>
</p>

<p>
  <strong>Comentários do evento:</strong>
</p>
<div class="comment-section">
  <%= form_tag create_comment_path, method: "event" do %>
    <%= hidden_field_tag "id", @event.id %>
      <div>
        <%= text_area_tag :comment %>
      </div>
      <button class="button" submit_tag>Comentar</button>
    <% end %>
</div>
<!-- a div abaixo da um erro no travis, mas faz a função que deveria
fazer no sistema -->
<div class="comment_list">
  <% if comments %>
    <% @comments.each do |comment| %>
      <%= comment.comment %> <br>
        <%= comment.user.email %> <br>
          <br>
    <% end %>
  <% end %>
</div>


<% if current_user %>
<p>
  <strong>Usuario logado:</strong>
  <%= current_user.email %>
</p>

<%= link_to "ESTOU INTERESSADO!!!", {:controller => "user_interest", :action => "create", :format => "json", :user_id => current_user.id, :event_id => @event.id}, :method=>:post  %>
<br><br>

<%= social_share_button_tag("Tenho interesse no evento: " + @event.title + ". Vamos comigo!") %>

<% end %>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers([
      {
        "lat": <%= @event.latitude %>,
        "lng": <%= @event.longitude %>,
        "picture": {
          "view_context.image_path": "http://www.clker.com/cliparts/e/3/F/I/0/A/google-maps-marker-for-residencelamontagne-hi.png",
          "width":  32,
          "height": 32
        },
        "infowindow": "hello!"
      }
    ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>

<p>
  <strong> Avaliações do Evento:</strong>
</p><br>

<%= render @event.reviews %>

<p>
  <strong>Usuários interessados no Evento:</strong>
</p><br>

<table>
  <thead>
    <tr>
      <th>User Id</th>
      <th>Email</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @event.interested_users.each do |int| %>
      <tr>
        <td><%= int.user.id %></td>
        <td><%= int.user.email %></td>
        <td><%= link_to 'Show', int.user %></td>
      </tr>
    <% end %>
  </tbody>
</table><br><br>



